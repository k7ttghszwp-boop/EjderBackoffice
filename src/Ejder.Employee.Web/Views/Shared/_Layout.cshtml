<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Ejder Personel</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        :root { --brand: #9C2D2D; }
        .bg-brand { background: var(--brand) !important; }
        .text-brand { color: var(--brand) !important; }
        .badge-soft { background: rgba(156,45,45,.10); color: var(--brand); }
        .card { border: 0; border-radius: 16px; }
        .shadow-soft { box-shadow: 0 .25rem .9rem rgba(0,0,0,.08); }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body class="bg-light">

<nav class="navbar navbar-expand-lg navbar-dark bg-brand">
    <div class="container">
        <a class="navbar-brand fw-bold" href="@Url.Action("Dashboard","Portal")">🐉 Ejder Personel</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="nav">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Dashboard","Portal")">Dashboard</a>
                </li>
            </ul>

            <div class="d-flex align-items-center gap-2">
                <span class="badge badge-soft px-3 py-2">
                    @((Context.Session.GetString("EmployeeName") ?? "Misafir"))
                </span>

                <a class="btn btn-outline-light btn-sm" href="@Url.Action("Logout","Portal")">Çıkış</a>
            </div>
        </div>
    </div>
</nav>

<main class="container my-4">
    @RenderBody()
</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
@RenderSection("Scripts", required: false)
</body>
</html>
