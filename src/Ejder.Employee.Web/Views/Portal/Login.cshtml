@{
    ViewData["Title"] = "Giriş";
    Layout = "_Layout";
}

<div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-4">
        <div class="card shadow-soft">
            <div class="card-body p-4">
                <h4 class="mb-1">Personel Girişi</h4>
                <div class="text-muted mb-3">Devam etmek için giriş yap.</div>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">@ViewBag.Error</div>
                }

                <form method="post" asp-controller="Portal" asp-action="Login">
                    <div class="mb-3">
                        <label class="form-label">E-posta</label>
                        <input name="email" type="email" class="form-control" placeholder="personel@ejder.com" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Şifre</label>
                        <input name="password" type="password" class="form-control" placeholder="••••" required>
                    </div>

                    <button class="btn btn-success w-100">Giriş Yap</button>

                    <div class="small text-muted mt-3">
                        Demo: <strong>personel@ejder.com</strong> / <strong>1234</strong>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
