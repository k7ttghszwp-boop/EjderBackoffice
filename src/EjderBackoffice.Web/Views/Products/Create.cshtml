@model Ejder.Core.Models.Product
@{
    Layout = "_LayoutBackoffice";
}

<h2 class="mb-4">Yeni Tur</h2>

<form method="post" class="card shadow-sm p-4" style="max-width:700px">

    <div class="row mb-3">
        <div class="col-md-6">
            <label class="form-label">Tur Adı</label>
            <input name="Name" class="form-control" required />
        </div>

        <div class="col-md-3">
            <label class="form-label">Süre (Gün)</label>
            <input name="Duration" class="form-control" type="number" min="1" required />
        </div>

        <div class="col-md-3">
            <label class="form-label">Fiyat (₺)</label>
            <input name="Price" class="form-control" type="number" min="0" required />
        </div>
    </div>

    <div class="d-flex justify-content-end gap-2">
        <a asp-action="Index" class="btn btn-outline-secondary">
            İptal
        </a>
        <button type="submit" class="btn btn-brand">
            Kaydet
        </button>
    </div>

</form>
