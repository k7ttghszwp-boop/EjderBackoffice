@model IEnumerable<Ejder.Core.Models.Product>
@{
    ViewData["Title"] = "Turlar";
    Layout = "_LayoutBackoffice";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="m-0">Turlar</h2>
    <a asp-action="Create" class="btn btn-brand">
        + Yeni Tur
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover mb-0 align-middle">
            <thead class="table-light">
                <tr>
                    <th>Ad</th>
                    <th>Fiyat</th>
                    <th>Slug</th>
                    <th class="text-end">İşlem</th>
                </tr>
            </thead>

            <tbody>
            @if (Model == null || !Model.Any())
            {
                <tr>
                    <td colspan="4" class="text-center text-muted py-4">
                        Henüz tur eklenmemiş.
                    </td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td><strong>@item.Name</strong></td>
                        <td>₺ @item.Price.ToString("N0")</td>
                        <td><code>@item.Slug</code></td>
                        <td class="text-end">
                            <a asp-controller="Reservations"
                               asp-action="Create"
                               asp-route-productId="@item.Id"
                               class="btn btn-sm btn-outline-primary">
                                Rezervasyon
                            </a>

                            <a asp-action="Edit"
                               asp-route-id="@item.Id"
                               class="btn btn-sm btn-outline-secondary ms-1">
                                Düzenle
                            </a>
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
</div>
