@{
    Layout = "_LayoutBackoffice";
    ViewData["Title"] = "Dashboard";
}

<div class="cards">
    <div class="card">
        <div class="card-title">Bugün Rezervasyon</div>
        <div class="card-value">12</div>
        <div class="card-foot">Dün: 9</div>
    </div>

    <div class="card">
        <div class="card-title">Açık Talepler</div>
        <div class="card-value">5</div>
        <div class="card-foot">Bekleyen işlem</div>
    </div>

    <div class="card">
        <div class="card-title">Bugün Satış</div>
        <div class="card-value">₺ 128.450</div>
        <div class="card-foot">Tahmini</div>
    </div>

    <div class="card">
        <div class="card-title">Aktif Turlar</div>
        <div class="card-value">23</div>
        <div class="card-foot">Bu hafta</div>
    </div>
</div>
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">Dashboard</h3>

        <form asp-controller="Account" asp-action="Logout" method="post">
            @Html.AntiForgeryToken()
            <button class="btn btn-outline-danger btn-sm">Çıkış</button>
        </form>
    </div>

    <div class="row g-3">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="text-muted">Toplam Personel</div>
                    <div class="fs-3 fw-bold">—</div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="text-muted">Açık IT Ticket</div>
                    <div class="fs-3 fw-bold">—</div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="text-muted">Bugün Gelen Talepler</div>
                    <div class="fs-3 fw-bold">—</div>
                </div>
            </div>
        </div>
    </div>
</div>